<VBox fx:controller="com.oskin_denis.java.filemanager.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="panel.fxml"/>
        <fx:include fx:id="RightPanel" source="panel.fxml"/>
    </HBox>

    <HBox spacing="5">
        <Button text="Копировать файл" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Переместить файл" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Удалить файл" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Выход из программы" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#btnExitAction"/>
        <padding>
            <Insets bottom="5" left="5" right="5" top="5"/>
        </padding>
    </HBox>
</VBox>